<settings>

<!-- 背景颜色 -->
    <setting propertyKey="@Properties.BackgroundColor" title="@Strings.BackgroundColorTitle">
        <settingConfig type="list">
            <listEntry value="0x000000">@Strings.ColorBlack</listEntry>
            <listEntry value="0x555555">@Strings.ColorDarkGray</listEntry>
            <listEntry value="0xAAAAAA">@Strings.ColorLightGray</listEntry>
            <listEntry value="0xFFFFFF">@Strings.ColorWhite</listEntry>
        </settingConfig>
    </setting>

<!-- 静态小时颜色 -->
    <setting propertyKey="@Properties.StaticHourColor" title="@Strings.StaticHourColorTitle">
        <settingConfig type="list">
            <listEntry value="0x0000FF">@Strings.ColorBlue</listEntry>
            <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
            <listEntry value="0xFFFF00">@Strings.ColorYellow</listEntry>
        </settingConfig>
    </setting>

<!-- 静态分钟颜色 -->
    <setting propertyKey="@Properties.StaticMinuteColor" title="@Strings.StaticMinuteColorTitle">
        <settingConfig type="list">
            <listEntry value="0x00FF00">@Strings.ColorGreen</listEntry>
            <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
            <listEntry value="0xFFFF00">@Strings.ColorYellow</listEntry>
        </settingConfig>
    </setting>

<!-- 小时代表色 -->
    <setting propertyKey="@Properties.HourColor" title="@Strings.HourColorTitle">
        <settingConfig type="list">
            <listEntry value="0xADD8E6">@Strings.ColorBlue</listEntry>
            <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
            <listEntry value="0xFFFF00">@Strings.ColorYellow</listEntry>
        </settingConfig>
    </setting>

<!-- 分钟代表色 -->
    <setting propertyKey="@Properties.MinuteColor" title="@Strings.MinuteColorTitle">
        <settingConfig type="list">
            <listEntry value="0xADD8E6">@Strings.ColorBlue</listEntry>
            <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
            <listEntry value="0xFFFF00">@Strings.ColorYellow</listEntry>
        </settingConfig>
    </setting>

<!-- 秒代表色 -->
    <setting propertyKey="@Properties.SecondColor" title="@Strings.SecondColorTitle">
        <settingConfig type="list">
            <listEntry value="0xADD8E6">@Strings.ColorBlue</listEntry>
            <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
            <listEntry value="0xFFFF00">@Strings.ColorYellow</listEntry>
        </settingConfig>
    </setting>
